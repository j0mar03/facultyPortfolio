# BookStack Environment Configuration
# Copy this file to .env and update with your actual values

# BookStack URL
BOOKSTACK_URL=https://site.itechportfolio.xyz

# Database Configuration
BOOKSTACK_DB_PASSWORD=BookstackDB2024!Secure

# Mail Configuration (Optional but recommended)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM=noreply@itechportfolio.xyz
MAIL_FROM_NAME=BookStack
MAIL_ENCRYPTION=tls
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Redis (Optional - for caching)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Advanced Settings (Optional)
# APP_TIMEZONE=UTC
# APP_LOCALE=en
# APP_DEBUG=false

# LDAP Authentication (Optional)
# AUTH_METHOD=ldap
# LDAP_SERVER=ldap://your-ldap-server.com:389
# LDAP_BASE_DN=dc=example,dc=com
# LDAP_DN=cn=admin,dc=example,dc=com
# LDAP_PASS=your-ldap-password
# LDAP_USER_FILTER=(&(uid=${user}))
# LDAP_VERSION=3

# SAML2 Authentication (Optional)
# AUTH_METHOD=saml2
# SAML2_NAME=SSO
# SAML2_EMAIL_ATTRIBUTE=email
# SAML2_DISPLAY_NAME_ATTRIBUTES=first_name,last_name
# SAML2_EXTERNAL_ID_ATTRIBUTE=uid
# SAML2_IDP_ENTITYID=https://your-idp.com/entityid
# SAML2_IDP_SSO=https://your-idp.com/sso
# SAML2_IDP_SLO=https://your-idp.com/slo
# SAML2_IDP_x509=your-certificate-here

# Storage Configuration (Optional)
# STORAGE_TYPE=local
# STORAGE_S3_KEY=
# STORAGE_S3_SECRET=
# STORAGE_S3_BUCKET=
# STORAGE_S3_REGION=

# File Upload Limits
# FILE_UPLOAD_SIZE_LIMIT=50
# ALLOWED_SSR_HOSTS=https://trusted-domain.com
